extends layout.pug

block content
	.login-form
		.form-header
			img.logo(src='images/smarthome-logo.png')
			form
				.form-group
					label(for='username') Name:
					input#username.form-control(type='text')
				.form-group
					label(for='password') Password:
					input#password.form-control(type='password')
				button#btn-login.btn.btn-primary(type='button', onclick='login()') Login
	#invalidModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true', style='margin-left: 250px')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					h5#modalTitle.modal-title Please Enter
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') Ã—
				.modal-body Please enter password and username
				.modal-footer
					button.btn.btn-secondary(type='button', data-dismiss='modal') Close